<TextView
        android:id="@+id/tv_un"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="0dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="15dip"
        android:text="User Name:"/>
    <EditText
        android:id="@+id/et_un"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/tv_un"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@id/tv_un"/>
     <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_un"
        android:layout_marginRight="0dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="15dip"
        android:text="Password:"/>
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/tv_pw"
        android:layout_alignTop="@id/tv_pw"
        android:layout_below="@id/et_un"
        android:layout_marginLeft="5dip"
        android:password="true"        />
    <TextView
        android:id="@+id/tv_lc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="0dip"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="15dip"
        android:text="Location:"/>
    <EditText
        android:id="@+id/et_lc"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/tv_lc"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@id/tv_lc"/>    
    <Button
        android:id="@+id/btn_login"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pw"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="110dip"
        android:text="Login" />
       
     <TextView
        android:id="@+id/tv_error"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:textSize="7pt"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btn_login"
        android:layout_marginRight="9dip"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="35dip"
        android:textColor="#AA0000"
        android:text=""/>
     
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="160dip"
        android:text="Sign Up" />
</LinearLayout>
